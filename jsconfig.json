{
  "compilerOptions": {
    "noLib": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    ".prettierrc.js",
    ".stylelintrc.js",
    ".postcssrc.js",
    "tailwind.config.js",
    ".commitlintrc.js",
    ".lintstagedrc.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
